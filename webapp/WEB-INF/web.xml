<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
  	<servlet-name>RegisterUser</servlet-name>
   	<servlet-class>servlets.RegisterUser</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Login</servlet-name>
   	<servlet-class>servlets.Login</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ListUsers</servlet-name>
   	<servlet-class>servlets.ListUsers</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ShowUser</servlet-name>
   	<servlet-class>servlets.ShowUser</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TogglePremium</servlet-name>
   	<servlet-class>servlets.TogglePremium</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListAddresses</servlet-name>
    <servlet-class>servlets.ListAddresses</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreateAddress</servlet-name>
    <servlet-class>servlets.CreateAddress</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateAddress</servlet-name>
    <servlet-class>servlets.UpdateAddress</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteAddress</servlet-name>
    <servlet-class>servlets.DeleteAddress</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>RegisterUser</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListUsers</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowUser</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TogglePremium</servlet-name>
    <url-pattern>/premium</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListAddresses</servlet-name>
    <url-pattern>/addresses</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateAddress</servlet-name>
    <url-pattern>/address/create</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateAddress</servlet-name>
    <url-pattern>/address/edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteAddress</servlet-name>
    <url-pattern>/address/delete</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>PremiumFilter</filter-name>
    <filter-class>
        filters.PremiumFilter
    </filter-class>
  </filter>
  <filter>
    <filter-name>ShowUserFilter</filter-name>
    <filter-class>
        filters.ShowUserFilter
    </filter-class>
  </filter>
  <filter>
    <filter-name>TogglePremiumFilter</filter-name>
    <filter-class>
        filters.TogglePremiumFilter
    </filter-class>
  </filter>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>
        filters.LoginFilter
    </filter-class>
  </filter>
  <filter>
    <filter-name>RegisterUserFilter</filter-name>
    <filter-class>
        filters.RegisterUserFilter
    </filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>PremiumFilter</filter-name>
    <url-pattern>/premium.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ShowUserFilter</filter-name>
    <url-pattern>/user</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>TogglePremiumFilter</filter-name>
    <url-pattern>/premium</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/login</url-pattern>
  </filter-mapping>
    <filter-mapping>
    <filter-name>RegisterUserFilter</filter-name>
    <url-pattern>/register</url-pattern>
  </filter-mapping>
</web-app>
